# Server Configuration
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/recipe-app
# For MongoDB Atlas (production): mongodb+srv://username:password@cluster.mongodb.net/recipe-app

# JWT Secret (use a strong, unique secret for production)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Email Configuration for Password Reset
# For Gmail:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Generate an App Password: Google Account > Security > 2-Step Verification > App passwords
# 3. Use the generated 16-character password (not your regular Gmail password)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Frontend Application URL
FRONTEND_URL=http://localhost:3000
# For production: https://your-domain.com

# Email Mode
# Set to 'true' for development/testing (simulates email sending)
# Set to 'false' for production (sends real emails)
EMAIL_SIMULATION_MODE=true

# Production Example Configuration:
# PORT=5000
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/recipe-app-prod
# JWT_SECRET=your_production_secret_key_256_bits_recommended
# EMAIL_USER=noreply@your-domain.com
# EMAIL_PASS=your_production_app_password
# FRONTEND_URL=https://your-domain.com
# EMAIL_SIMULATION_MODE=false
